    <color_ok>
      <color red="55" green="255" blue="35" alpha="160">
      </color>
    </color_ok>
    <thumb_color>
      <color red="200" green="180" blue="160">
      </color>
    </thumb_color>
    <value_color>
      <color name="OK" red="0" green="255" blue="0">
      </color>
    </value_color>
    <rules>
      <rule name="Value Color" prop_id="value_color" out_exp="false">
        <exp bool_exp="pv0 &lt; 10">
          <value>
            <color red="255" green="0" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0 &gt;= 10 &amp;&amp; pv0 &lt; 20">
          <value>
            <color red="255" green="200" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0 &gt;= 20 &amp;&amp; pv0 &lt;= 80">
          <value>
            <color red="55" green="255" blue="35">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0 &gt; 80 &amp;&amp; pv0 &lt;= 90">
          <value>
            <color red="255" green="200" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0 &gt; 90">
          <value>
            <color red="255" green="0" blue="0">
            </color>
          </value>
        </exp>
        <pv_name>sim://ramp(-20,100,1,0.1)</pv_name>
      </rule>
    </rules>
    <drag_disabled>true</drag_disabled>
    <limits_from_pv>false</limits_from_pv>
  </widget>
